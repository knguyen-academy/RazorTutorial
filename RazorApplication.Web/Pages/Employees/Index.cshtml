@page
@model RazorApplication.Web.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Index";
    ViewData["ShowButtons"] = true;

}

<form method="get">
    <div class="input-group">
        <input class="form-control" asp-for="searchTerm">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
</form>
@*@await Component.InvokeAsync("HeadCount")*@
<vc:head-count department-name="@null"></vc:head-count>
<h1>Employees</h1>

<style>
    .btn {
        width: 75px;
    }
</style>

<div class="card-deck">
    @foreach (var employee in Model.Employees)
    {
        <partial name="_DisplayEmployeePartial" model="employee" view-data="ViewData" />
    }
</div>